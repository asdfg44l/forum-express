<div class="row mt-3">
  <div class="col-md-10 mx-auto">
    <h3>Profile</h3>
    <div class="media shadow-sm p-3 mb-5 bg-white rounded">
      <img src="{{ user.image }}" class="mr-3" alt="headshot">
      <div class="media-body">
        <h4 class="mt-0">{{ user.name }}</h4>
        {{ user.email }}
        <div class="mt-3">
          <a href="/users/{{ user.id }}/edit" class="btn btn-info">edit</a>
        </div>
      </div>
    </div>
    <div class="card mt-3">
      <div class="card-header">
        {{ commentLength }} 已評論餐廳
      </div>
      <div class="card-body">
        {{#each comments}}
        <a class="text-decoration-none mr-3" href="/restaurants/{{ this.Restaurant.id }}">
          <img src="{{ this.Restaurant.image }}" alt="" width="100" height="100">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>