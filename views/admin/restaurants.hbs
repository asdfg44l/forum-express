      <!-- restaurant list -->
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurant/{{ this.id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
              <div class="restaurant-category mb-1">
                <i class="fas fa-map-marker-alt pr-2"></i> {{ this.location }}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="d-flex justify-content-end py-2">
                <a href="/restaurant/edit/{{ this.id }}" type="button" class="btn btn-sm btn-outline-primary">編輯</a>
                <form class="mx-2" action="./restaurant/{{ this.id }}?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirmWhileDelete()">刪除</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script>
  function confirmWhileDelete() {
    return confirm("確定要刪除嗎?")
  }
</script>